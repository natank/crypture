{
  "name": "backend-proxy",
  "version": "1.0.0",
  "description": "Crypture backend proxy service",
  "main": "dist/main.js",
  "scripts": {
    "dev": "npx nodemon --config nodemon.json",
    "build": "tsc",
    "start": "node dist/main.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "container:build": "podman build -t crypture-backend-proxy -f Containerfile .",
    "container:build:dev": "podman build -t crypture-backend-proxy-dev -f Containerfile.dev .",
    "container:run": "podman run -p 3000:3000 --name crypture-backend-proxy --rm crypture-backend-proxy",
    "container:run:dev": "podman run -p 3000:3000 --name crypture-backend-proxy-dev --rm -v .:/app crypture-backend-proxy-dev",
    "container:up": "podman-compose -f podman-compose.yml up -d",
    "container:up:dev": "podman-compose -f podman-compose.dev.yml up",
    "container:down": "podman-compose -f podman-compose.yml down",
    "container:down:dev": "podman-compose -f podman-compose.dev.yml down",
    "container:logs": "podman-compose -f podman-compose.yml logs -f",
    "container:logs:dev": "podman-compose -f podman-compose.dev.yml logs -f",
    "container:exec": "podman exec -it crypture-backend-proxy sh",
    "container:exec:dev": "podman exec -it crypture-backend-proxy-dev sh",
    "dev:debug": "npx nodemon --inspect=0.0.0.0:9229",
    "dev:verbose": "DEBUG=* npm run dev",
    "dev:clean": "npm run clean && npm run dev",
    "dev:test": "npm run test:unit -- --watch",
    "dev:lint": "npm run lint -- --watch",
    "dev:build": "npm run build && npm run dev",
    "logs:dev": "tail -f logs/development.log",
    "logs:app": "pm2 logs",
    "start:prod": "NODE_ENV=production npm start",
    "start:dev": "NODE_ENV=development npm start",
    "docs:serve": "npm run dev",
    "docs:build": "npm run build && npm run start:dev",
    "docs:open": "open http://localhost:3000/api-docs",
    "docs:json": "curl -s http://localhost:3000/api-docs/json > swagger.json",
    "docs:validate": "swagger-cli validate swagger.json",
    "test:containers": "jest --config jest.config.containers.js",
    "test:containers:unit": "jest --config jest.config.containers.js --testPathPattern=tests/unit",
    "test:containers:integration": "jest --config jest.config.containers.js --testPathPattern=tests/integration",
    "test:containers:health": "jest --config jest.config.containers.js --testPathPattern=tests/integration/containers",
    "test:containers:watch": "jest --config jest.config.containers.js --watch",
    "test:containers:coverage": "jest --config jest.config.containers.js --coverage",
    "test:hybrid": "npm run test:unit && npm run test:containers:integration",
    "test:full": "npm run test:hybrid && npm run test:containers:health",
    "test:ci": "npm run test:containers -- --ci --coverage --watchAll=false",
    "containers:start": "docker-compose -f tests/docker-compose.test.yml up -d",
    "containers:stop": "docker-compose -f tests/docker-compose.test.yml down",
    "containers:logs": "docker-compose -f tests/docker-compose.test.yml logs -f"
  },
  "keywords": [
    "crypture",
    "backend",
    "proxy",
    "api"
  ],
  "author": "Crypture Team",
  "license": "MIT",
  "dependencies": {
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@nx/eslint": "^22.3.3",
    "@nx/eslint-plugin": "^22.3.3",
    "@nx/js": "^22.3.3",
    "@testcontainers/postgresql": "^11.11.0",
    "@testcontainers/redis": "^11.11.0",
    "@types/axios": "^0.9.36",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/nodemon": "^1.19.6",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "testcontainers": "^11.11.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "wait-on": "^9.0.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
