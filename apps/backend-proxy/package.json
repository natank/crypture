{
  "name": "backend-proxy",
  "version": "1.0.0",
  "description": "Crypture backend proxy service",
  "main": "dist/main.js",
  "scripts": {
    "dev": "nodemon src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "container:build": "podman build -t crypture-backend-proxy -f Containerfile .",
    "container:build:dev": "podman build -t crypture-backend-proxy-dev -f Containerfile.dev .",
    "container:run": "podman run -p 3000:3000 --name crypture-backend-proxy --rm crypture-backend-proxy",
    "container:run:dev": "podman run -p 3000:3000 --name crypture-backend-proxy-dev --rm -v .:/app crypture-backend-proxy-dev",
    "container:up": "podman-compose -f podman-compose.yml up -d",
    "container:up:dev": "podman-compose -f podman-compose.dev.yml up",
    "container:down": "podman-compose -f podman-compose.yml down",
    "container:down:dev": "podman-compose -f podman-compose.dev.yml down",
    "container:logs": "podman-compose -f podman-compose.yml logs -f",
    "container:logs:dev": "podman-compose -f podman-compose.dev.yml logs -f",
    "container:exec": "podman exec -it crypture-backend-proxy sh",
    "container:exec:dev": "podman exec -it crypture-backend-proxy-dev sh"
  },
  "keywords": [
    "crypture",
    "backend",
    "proxy",
    "api"
  ],
  "author": "Crypture Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
