{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noEmitOnError": false,
    "skipLibCheck": true
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**",
    "**/e2e/**",
    "**/*.stories.tsx"
  ],
  "references": [
    {
      "path": "../../libs/shared-types/tsconfig.lib.json"
    },
    {
      "path": "../../libs/api-client/tsconfig.lib.json"
    }
  ]
}
