{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "declaration": false,
    "noEmit": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": [
      "node",
      "playwright",
      "vitest",
      "vitest/globals",
      "framer-motion"
    ],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "types/*": ["src/types/*"],
      "@components/*": ["src/components/*"],
      "@services/*": ["src/services/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@pages/*": ["src/pages/*"],
      "@context/*": ["src/context/*"],
      "@e2e/*": ["src/e2e/*"],
      "@test-setup": ["src/e2e/test-setup.ts"],
      "@assets/*": ["public/assets/*"],
      "@crypture/shared-types": ["../../libs/shared-types/src/index.ts"],
      "@crypture/api-client": ["../../libs/api-client/src/index.ts"],
      "@crypture/utils": ["../../libs/utils/src/index.ts"]
    }
  },
  "include": ["src"],
  "references": [
    {
      "path": "../../libs/shared-types"
    },
    {
      "path": "../../libs/api-client"
    }
  ]
}
