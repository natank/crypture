{
  "name": "frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "application",
  "tags": ["nx-react", "nx-vite"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/frontend",
        "root": "apps/frontend"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        },
        "ci": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "vite",
        "cwd": "apps/frontend"
      },
      "configurations": {
        "development": {
          "command": "vite"
        },
        "production": {
          "command": "vite --mode production"
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "options": {
        "buildTarget": "frontend:build:production"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/apps/frontend"],
      "options": {
        "command": "npm run test:unit",
        "cwd": "apps/frontend"
      },
      "configurations": {
        "ci": {
          "command": "npm run test:unit:ci"
        }
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p tsconfig.app.json",
        "cwd": "apps/frontend"
      },
      "configurations": {
        "ci": {
          "command": "npm run typecheck:ci"
        }
      }
    }
  }
}
