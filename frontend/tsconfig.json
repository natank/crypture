{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "esnext",
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./dist", // Optional: .d.ts files go here
    "noEmit": false,
    "paths": {
      "@components/*": ["components/*"],
      "@context/*": ["context/*"],
      "@hooks/*": ["hooks/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"],
      "@types/*": ["types/*"],
      "@e2e/*": ["e2e/*"],
      "@test-setup": ["e2e/test-setup.ts"],
      "@assets/*": ["../public/assets/*"],
    },
    "types": ["node", "playwright", "vitest", "vitest/globals", "framer-motion"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"]
}
