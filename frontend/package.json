{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:ci": "vite build",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest run --reporter verbose",
    "test:unit": "vitest run --config vitest.config.ts --reporter verbose",
    "test:unit:watch": "vitest --config vitest.config.ts",
    "test:e2e": "VITE_POLL_INTERVAL=2000 playwright test",
    "test:e2e:debug": "PWDEBUG=1 DEBUG=pw:api VITE_POLL_INTERVAL=2000 playwright test --headed",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky install",
    "test:a11y": "playwright test e2e/specs/a11y-contrast.spec.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.0",
    "@tailwindcss/vite": "^4.1.7",
    "@types/recharts": "^1.8.29",
    "focus-trap-react": "^11.0.3",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.562.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.8.2",
    "recharts": "^3.1.2",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@chromatic-com/storybook": "^4.0.0",
    "@eslint/js": "^9.25.0",
    "@playwright/test": "^1.52.0",
    "@storybook/addon-a11y": "^9.0.3",
    "@storybook/addon-docs": "^9.0.3",
    "@storybook/addon-onboarding": "^9.0.3",
    "@storybook/addon-vitest": "^9.0.3",
    "@storybook/react-vite": "^9.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.18.8",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/browser": "^3.1.4",
    "@vitest/coverage-v8": "^3.1.4",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.25.0",
    "eslint-import-resolver-typescript": "^4.4.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-paths": "^1.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^9.0.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "playwright": "^1.52.0",
    "storybook": "^9.0.3",
    "tailwindcss": "^4.1.10",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  }
}
